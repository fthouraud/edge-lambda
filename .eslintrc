{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "ignorePatterns": [
    "distribution",
    "packages"
  ],
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "plugins": ["import"],
  "rules": {
    "import/order": ["error", { "newlines-between": "always" }]
  }
}
